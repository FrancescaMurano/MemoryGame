                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:isScrollContainer="true"
                    android:keepScreenOn="true"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/one"
