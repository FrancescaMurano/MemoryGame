<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.murano.memorygameapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:windowSoftInputMode="adjustPan|adjustResize"

        android:theme="@style/Theme.MemoryGameApp">
        <activity
            android:name=".HomeController">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.murano.memorygameapp.GameController_Level1"
            android:parentActivityName="com.murano.memorygameapp.GameController_Level1">
        </activity>
        <activity
            android:name="com.murano.memorygameapp.GameController_Level2"
            android:parentActivityName="com.murano.memorygameapp.GameController_Level2">
        </activity>
        <activity
            android:name="com.murano.memorygameapp.GameController_Level3"
            android:parentActivityName="com.murano.memorygameapp.GameController_Level3">
        </activity>
        <activity
            android:name="com.murano.memorygameapp.GameController_Level4"
            android:parentActivityName="com.murano.memorygameapp.GameController_Level4">
        </activity>
        <activity
            android:name="com.murano.memorygameapp.GameController_Level5"
            android:parentActivityName="com.murano.memorygameapp.GameController_Level5">
        </activity>
        <activity
            android:name="com.murano.memorygameapp.LevelsController"
            android:parentActivityName="com.murano.memorygameapp.LevelsController">
        </activity>
        <activity android:name=".LoginController"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".RegisterController" />


    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
</manifest>